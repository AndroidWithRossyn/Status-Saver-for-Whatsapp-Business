<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/font</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:statusBarColor">@color/home_top_start_color</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="AppTheme.Splace" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:fontFamily">@font/font</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right_side</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left_side</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left_side</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right_side</item>
    </style>
</resources>
